<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0">
            <Label text="New Username"/>
            <TextField fx:id="usernameField"/>
            <Label text="Set Password"/>
            <PasswordField fx:id="passwordField"/>
            <Label text="Confirm Password"/>
            <PasswordField fx:id="confirmPasswordField"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Register" onAction="#handleRegister"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
