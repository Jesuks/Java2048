<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="LoginController.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <Label text="New Username" />
            <TextField fx:id="usernameField" />
            <Label text="Set Password" />
            <PasswordField fx:id="passwordField" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#handleRegister" text="Register" />
                <Button onAction="#handleCancel" text="Cancel" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
